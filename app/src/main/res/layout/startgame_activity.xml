<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MainActivity"
    android:background="@color/md_grey_900">

    <TextView
        android:id="@+id/tv_kotlinFued"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="Kotlin Fued"
        android:textColor="@color/md_grey_50"
        android:textSize="95sp"
        app:layout_constraintBottom_toTopOf="@id/t_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_descrb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/start"
        android:text="1.Multiple Choice Questions"
        android:textColor="@color/md_grey_50"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_descrb2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t_guide" />

    <TextView
        android:id="@+id/tv_descrb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/start"
        android:gravity="center"
        android:text="2.Answer Questions Correctly"
        android:textColor="@color/md_grey_50"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_descrb3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_descrb1" />


    <TextView
        android:id="@+id/tv_descrb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/start"
        android:text="3.Press Start Game to Begin"
        android:textColor="@color/md_grey_50"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/d_guide"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_descrb2" />


    <Button
        android:id="@+id/button_startGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/d_guide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/t_guide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent=".30"/>
<androidx.constraintlayout.widget.Guideline
    android:id="@+id/d_guide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent=".7"/>



</androidx.constraintlayout.widget.ConstraintLayout>